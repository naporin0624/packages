{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "es2015",
    "module": "ESNext"
  },
  "include": ["packages"]
}
